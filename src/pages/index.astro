---
import ArticleCard from "@components/ArticleCard.astro";
import BaseLayout from "@layouts/BaseLayout.astro";
import { Frontmatter, sortDateDescending } from "src/misc";

const allPosts = await Astro.glob<Frontmatter>("../pages/blog/articles/*.md");
const posts = sortDateDescending(
	allPosts.filter((post) => post.frontmatter.draft != true)
).slice(0, 3);
---

<BaseLayout title="Home" activeLink="home">
	<section
		class="flex flex-col sm:flex-row justify-center max-w-[90%] w-[52rem] mx-auto gap-12 mb-48"
	>
		<img
			width="200"
			height="200"
			src="public/WESlogo.png"
			alt="avatar"
			class="rounded-md h-fit self-center justify-self-center"
		/>
		<div class="flex flex-col flex-wrap flex-grow">
			<h1
				class="text-center text-white bg-clip-text text-transparent text-5xl mb-[0.7em]"
			>
				Welcome to the 23<span class="align-super text-3xl">rd</span> edition
				of the
				<span class="font-bold"> Warwick Economics Summit</span>
			</h1>

			<h2 class="text-center text-white bg-clip-text text-3xl mb-[0.7em]">
				Be part of the <span class="font-bold underline decoration-2">
					change.</span
				>
				Join the <span class="font-bold underline decoration-2">
					debate.</span
				>
			</h2>

			<p class="text-center text-white">
				Welcome to our official website. We are an international forum
				for the world's brightest students and most influential
				students. Every year we welcome students from universities
				across the world and speakers from Europe, Asia, Africa and
				America.
			</p>
			<div class="flex flex-wrap justify-center gap-5 mt-4">
				<a
					class="w-8 h-8 flex scale-1 hover:scale-125 transition-[scale] justify-center"
					href="https://www.facebook.com/WarwickEconomicsSummit/?locale=en_GB"
					target="_blank"
					rel="noreferrer noopener"
				>
					<span class="sr-only">Link to our Facebook page</span>
					<svg
						xmlns="http://www.w3.org/2000/svg"
						viewBox="0 0 512 512"
						fill="#f3f0e8"
					>
						<path
							d="M504 256C504 119 393 8 256 8S8 119 8 256c0 123.78 90.69 226.38 209.25 245V327.69h-63V256h63v-54.64c0-62.15 37-96.48 93.67-96.48 27.14 0 55.52 4.84 55.52 4.84v61h-31.28c-30.8 0-40.41 19.12-40.41 38.73V256h68.78l-11 71.69h-57.78V501C413.31 482.38 504 379.78 504 256z"
						></path></svg
					>
				</a>
				<a
					class="w-8 h-8 flex scale-1 hover:scale-125 transition-[scale] justify-center"
					href="https://twitter.com/economicssummit?lang=en"
					target="_blank"
					rel="noreferrer noopener"
				>
					<span class="sr-only">Link to my Twitter</span>
					<svg
						xmlns="http://www.w3.org/2000/svg"
						viewBox="0 0 512 512"
						fill="#f3f0e8"
					>
						<path
							d="M459.37 151.716c.325 4.548.325 9.097.325 13.645 0 138.72-105.583 298.558-298.558 298.558-59.452 0-114.68-17.219-161.137-47.106 8.447.974 16.568 1.299 25.34 1.299 49.055 0 94.213-16.568 130.274-44.832-46.132-.975-84.792-31.188-98.112-72.772 6.498.974 12.995 1.624 19.818 1.624 9.421 0 18.843-1.3 27.614-3.573-48.081-9.747-84.143-51.98-84.143-102.985v-1.299c13.969 7.797 30.214 12.67 47.431 13.319-28.264-18.843-46.781-51.005-46.781-87.391 0-19.492 5.197-37.36 14.294-52.954 51.655 63.675 129.3 105.258 216.365 109.807-1.624-7.797-2.599-15.918-2.599-24.04 0-57.828 46.782-104.934 104.934-104.934 30.213 0 57.502 12.67 76.67 33.137 23.715-4.548 46.456-13.32 66.599-25.34-7.798 24.366-24.366 44.833-46.132 57.827 21.117-2.273 41.584-8.122 60.426-16.243-14.292 20.791-32.161 39.308-52.628 54.253z"
						></path></svg
					>
				</a>
				<a
					class="w-8 h-8 flex scale-1 hover:scale-125 transition-[scale] justify-center"
					href="https://www.linkedin.com/"
					target="_blank"
					rel="noreferrer noopener"
				>
					<span class="sr-only">Link to my LinkedIn</span>
					<svg
						xmlns="http://www.w3.org/2000/svg"
						viewBox="0 0 448 512"
						fill="#f3f0e8"
					>
						<path
							d="M416 32H31.9C14.3 32 0 46.5 0 64.3v383.4C0 465.5 14.3 480 31.9 480H416c17.6 0 32-14.5 32-32.3V64.3c0-17.8-14.4-32.3-32-32.3zM135.4 416H69V202.2h66.5V416zm-33.2-243c-21.3 0-38.5-17.3-38.5-38.5S80.9 96 102.2 96c21.2 0 38.5 17.3 38.5 38.5 0 21.3-17.2 38.5-38.5 38.5zm282.1 243h-66.4V312c0-24.8-.5-56.7-34.5-56.7-34.6 0-39.9 27-39.9 54.9V416h-66.4V202.2h63.7v29.2h.9c8.9-16.8 30.6-34.5 62.9-34.5 67.2 0 79.7 44.3 79.7 101.9V416z"
						></path></svg
					>
				</a>
			</div>
		</div>
	</section>

	<section>
		<h2
			class="mx-auto text-center mb-8 text-white bg-clip-text text-4xl border-b-2 font-semibold w-fit"
		>
			Featured Articles
		</h2>

		<div class="flex flex-wrap flex-col justify-center gap-12">
			{posts.map((post) => <ArticleCard content={post} />)}
		</div>
	</section>
</BaseLayout>
